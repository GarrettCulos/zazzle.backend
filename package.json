{
  "name": "zazzle.backend",
  "version": "0.0.1",
  "description": "TypeScript Node API",
  "repository": {
    "type": "git",
    "url": "https://github.com/GarrettCulos/zazzle.backend"
  },
  "author": "Garrett Culos",
  "license": "MIT",
  "scripts": {
    "start": "npm run serve-graphql",
    "dev": "concurrently -k -p \"[{name}]\" -n \"Webpack,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run build.watch\" \"npm run watch-graphql-node\"",
    "build": "webpack --config webpack/webpack.graphql.js",
    "build.serverless": "webpack --config webpack/webpack.serverless.js",
    "build.watch": "webpack --config webpack/webpack.graphql.watch.js",
    "build.docker.watch": "npm run seed.dynamodb && webpack --config webpack/webpack.graphql.docker.js",
    "seed.dynamodb": "ts-node ./scripts/dynamodb-startup-script.ts",
    "build.docker": "concurrently -k -p \"[{name}]\" -n \"Webpack,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run build.docker.watch\" \"npm run watch-graphql-node\"",
    "watch-graphql-node": "nodemon dist/graphql/express.js --watch",
    "clean.build": "rimraf dist coverage graphql-sam-deploy serverless-sam-deploy serverless",
    "serve-graphql.docker": "npm run build.docker && npm run run-graphql-node",
    "serve-graphql": "npm run build && npm run run-graphql-node",
    "run-graphql-node": "nodemon dist/graphql/express.js",
    "clean": "npm run clean.build && rimraf node_modules && npm install",
    "test": "jest --forceExit --coverage --verbose",
    "lint": "eslint src/**/*.ts",
    "prettier:check": "prettier --config ./.prettierrc --list-different \"src/**/*{.ts,.js,.json,.css,.scss}\"",
    "prettier:fix": "prettier --config ./.prettierrc --staged --write \"src/**/*\"",
    "prettier:quick": "pretty-quick --stage",
    "aws.sam.local": "sam local start-api -t graphql-sam-deploy/template.json",
    "aws.sam.pack": "sam package --template-file graphql-sam-deploy/template.json --output-template-file graphql-sam-deploy/sam-template.yml --s3-bucket zazzle-serverless-api",
    "aws.sam.deploy": "sam deploy --template-file graphql-sam-deploy/sam-template.yml --stack-name zazzle-serverless-api --capabilities CAPABILITY_NAMED_IAM",
    "serverless.build.pack.deploy": "npm run build.serverless && npm run aws.sam.pack && npm run aws.sam.deploy"
  },
  "husky": {
    "hooks": {
      "precommit": "npm run prettier:quick"
    }
  },
  "dependencies": {
    "@types/aws-sdk": "^2.7.0",
    "@types/graphql-type-json": "^0.3.2",
    "@types/lz-string": "^1.3.33",
    "@types/request": "^2.48.4",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "apollo-cache-inmemory": "^1.6.2",
    "apollo-server": "^2.14.2",
    "apollo-server-lambda": "^2.4.8",
    "async": "^3.0.1",
    "aws-sdk": "^2.608.0",
    "bcrypt-nodejs": "^0.0.3",
    "dotenv-webpack": "^1.7.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "express": "^4.16.3",
    "google-auth-library": "^5.9.1",
    "graphql": "^14.2.1",
    "graphql-type-json": "^0.3.1",
    "jsonwebtoken": "^8.3.0",
    "lz-string": "^1.4.4",
    "request": "^2.88.0"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.4",
    "@babel/plugin-transform-typescript": "^7.3.2",
    "@babel/preset-typescript": "^7.3.3",
    "@types/async": "^3.0.0",
    "@types/aws-lambda": "^8.10.24",
    "@types/bcrypt-nodejs": "^0.0.30",
    "@types/express": "^4.11.1",
    "@types/graphql": "^14.2.0",
    "@types/jest": "^24.9.0",
    "@types/jsonwebtoken": "^8.3.6",
    "@types/node": "^13.1.8",
    "@types/uuid": "^3.4.4",
    "aws-lambda": "^1.0.5",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.0.5",
    "babel-preset-latest-node": "^4.0.1",
    "concurrently": "^5.0.2",
    "copy-webpack-plugin": "^5.0.0",
    "husky": "^4.2.3",
    "jest": "^24.7.1",
    "nodemon": "^2.0.2",
    "prettier": "^1.14.2",
    "pretty-quick": "^2.0.1",
    "rimraf": "^3.0.0",
    "sam-webpack-plugin": "^0.1.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.3.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "tslib": "^1.9.0",
    "typescript": "^3.7.5",
    "uuid": "^3.4.0",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3",
    "webpack-merge": "^4.2.1",
    "webpack-node-externals": "^1.7.2",
    "webpack-sources": "^1.3.0"
  },
  "jest": {
    "moduleNameMapper": {
      "@config(.*)$": "<rootDir>/src/config/$1",
      "@global(.*)$": "<rootDir>/global/$1",
      "@util(.*)$": "<rootDir>/src/util/$1",
      "@services(.*)$": "<rootDir>/src/services/$1"
    }
  }
}
